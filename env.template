# PostgreSQL Notification System - Environment Configuration
# Copy this file to .env and update with your database settings

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=notify_postgres
DB_USER=postgres
DB_PASSWORD=password

# Logging Configuration
LOG_LEVEL=INFO

# Optional: Notification Settings
NOTIFICATION_CHANNELS=interaction_changes,status_changes

# Optional: Connection Pool Settings
DB_POOL_MIN=1
DB_POOL_MAX=10

# Optional: Notification Settings
NOTIFICATION_TIMEOUT=30
NOTIFICATION_RETRY_COUNT=3
